#include <stdio.h>
#include <stdlib.h>

int main(void){

  int i;
  int cnt = 0;
  int num;
  char name[10];
  
  printf("Who are you?\n>");
  scanf("%s",name);
  printf("Hello,%s!\n",name);

  printf("Tossing a coin...\n");

  for(i = 1;i <= 3;i++){
    num = rand();
    printf("Round %d:",i);
    if(num % 2 == 0){
      printf("Heads\n");
      cnt++;
    }else{
      printf("Tails\n");
    }

  }

  printf("Heads: %d, Tails: %d\n",cnt,3 - cnt);
  
   if(1 < cnt){
    printf("You won!\n");
  }else{
    printf("You lost...\n");
  }
 
  return 0;

}
  
      
